{
  "entryFile": "src/server.ts",
  "ignore": ["**/node_modules/**"],
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/**/*.controller.ts"],
  "spec": {
    "securityDefinitions": {
      "cookieAuth": {
        "type": "apiKey",
        "in": "cookie",
        "name": "access_token"
      }
    },
    "outputDirectory": "src",
    "specVersion": 3
  },
  "routes": {
    "authenticationModule": "src/authentication.ts",
    "routesDir": "src/routes"
  }
}
