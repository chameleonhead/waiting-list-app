{
  "name": "wait-list-app",
  "version": "0.0.1",
  "description": "wait-list-app initialised with create-express-typescript-application.",
  "main": "src/index.ts",
  "private": true,
  "scripts": {
    "build": "tsoa spec-and-routes && tsc",
    "start": "node ./build/src/index.js",
    "dev": "tsoa spec-and-routes && ts-node ./src/index.ts",
    "dev:nodemon": "nodemon -w src -e ts,json --ignore ./src/routes/routes.ts --ignore ./src/swagger.json -x npm run dev",
    "test": "jest --watch"
  },
  "dependencies": {
    "express": "^4.17.1",
    "swagger-ui-express": "^4.1.6",
    "tsoa": "^3.8.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.12",
    "@types/node": "^15.12.4",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/uuid": "^8.3.0",
    "nodemon": "^2.0.7",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4"
  },
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  }
}
